<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header role="banner">
        <img id="logo-main" src="~/Content/pusheaderFinalpng.png" style="width:1265px;height:150px;"  alt="PickUp sports logo">
        <nav id="navbar-primary" class="navbar navbar-default" role="navigation">

            <div class="container-fluid">   
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-primary-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("PickUp Sports", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="collapse navbar-collapse" id="navbar-primary-collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        @if (User.IsInRole("Player") == true)
                        {
                            <li>@Html.ActionLink("Today's Events", "PlayerInterestEvents", "Events")</li>
                            <li>@Html.ActionLink("Player Details", "Details", "Players")</li>
                            <li>@Html.ActionLink("Create Event", "Create", "Events")</li>
                            <li>@Html.ActionLink("My Events","MyEvents","Events")</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

